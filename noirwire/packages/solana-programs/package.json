{
  "name": "@noirwire/solana-programs",
  "version": "0.1.0",
  "description": "NoirWire Solana Programs - Shielded Pool, ZK Verifier, and Vault Registry",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "idl": "anchor idl init",
    "generate-vks": "ts-node scripts/generate-and-deploy-vks.ts --skip-deploy",
    "deploy-vks": "ts-node scripts/generate-and-deploy-vks.ts --deploy-only",
    "generate-and-deploy-vks": "ts-node scripts/generate-and-deploy-vks.ts",
    "lint": "cargo clippy --all-targets -- -D warnings -A unexpected_cfgs -A deprecated -A ambiguous_glob_reexports",
    "lint:fix": "cargo clippy --all-targets --fix --allow-dirty --allow-staged",
    "format": "cargo fmt",
    "format:check": "cargo fmt -- --check"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.91.0"
  },
  "devDependencies": {
    "@noble/hashes": "^2.0.1",
    "@noir-lang/backend_barretenberg": "0.35.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
