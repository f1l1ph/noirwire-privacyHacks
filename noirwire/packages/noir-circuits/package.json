{
  "name": "@noirwire/noir-circuits",
  "version": "0.1.0",
  "description": "NoirWire ZK Circuits - Privacy-preserving transaction circuits",
  "private": true,
  "scripts": {
    "build": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo check",
    "check": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo check",
    "compile": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo compile",
    "format": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo fmt",
    "format:check": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo fmt --check",
    "lint": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo check",
    "test": "cd circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo test",
    "clean": "rm -rf circuits/target"
  },
  "engines": {
    "nargo": ">=1.0.0-beta"
  }
}
