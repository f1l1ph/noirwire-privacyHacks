{
  "name": "noirwire-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently -n 'indexer,web' -c 'green,cyan' 'yarn dev:indexer' 'yarn dev:web'",
    "dev:validator": "cd packages/solana-programs && solana-test-validator --reset",
    "dev:api": "cd apps/api && yarn dev",
    "dev:indexer": "cd apps/indexer && yarn dev",
    "dev:web": "cd apps/web && yarn dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "yarn format:ts && yarn format:rust && yarn format:noir",
    "format:check": "yarn format:check:ts && yarn format:check:rust && yarn format:check:noir",
    "format:ts": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check:ts": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:rust": "cd packages/solana-programs && cargo fmt",
    "format:check:rust": "cd packages/solana-programs && cargo fmt -- --check",
    "format:noir": "cd packages/noir-circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo fmt",
    "format:check:noir": "cd packages/noir-circuits && PATH=\"$HOME/.nargo/bin:$PATH\" nargo fmt --check"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": "1.x"
  },
  "packageManager": "yarn@1.22.22"
}
